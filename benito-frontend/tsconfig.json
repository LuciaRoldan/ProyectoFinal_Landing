{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "removeComments": false
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": ["build", "dist", "node_modules", "__tests__", "config"],
  "types": ["node", "webpack", "react", "react-dom", "reactstrap"],
  "include": ["src/config.ts", "src/store/*/types.tsx"],
  "compileOnSave": false
}
